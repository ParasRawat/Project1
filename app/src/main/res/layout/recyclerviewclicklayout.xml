<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:padding="4dp"
        android:id="@+id/description_click"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/imageview"
        android:layout_centerHorizontal="true"
        android:text="Description" />

    <TextView
        android:id="@+id/typeddescription"
        android:layout_width="200dp"
        android:text="Typed description for the given issue"
        android:layout_height="100dp"
        android:padding="4dp"
        android:layout_below="@+id/description_click"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:text="Response message"
        android:layout_below="@+id/typeddescription"
        android:layout_centerHorizontal="true" />


</RelativeLayout>