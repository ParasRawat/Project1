<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoimage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ngopng" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoimage"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="Report"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/issuespinnercardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reprtheadercardiew"
        android:layout_margin="8dp"
        android:layout_alignParentLeft="true">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/issuespinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reprtheadercardiew"
            android:layout_margin="4dp"
            android:padding="8dp">

        </android.support.v7.widget.AppCompatSpinner>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/reprtheadercardiew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_below="@+id/header"
        android:layout_alignParentLeft="true">

        <EditText
            android:background="@drawable/textlayout"
            android:id="@+id/reprtheader"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/header"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:hint="Short Header"
            android:paddingLeft="4dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_alignParentLeft="true">

        <EditText
            android:background="@drawable/textlayout"
            android:id="@+id/reportmessage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/add"
            android:layout_margin="4dp"
            android:hint="Please write a short description"
            android:paddingLeft="10dp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/issuespinnercardview"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="@drawable/textlayout"
        android:padding="10dp"
        android:text="You can also add otpional images" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:background="@color/colorAccent"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text="Submit"
            android:textAlignment="center" />
    </android.support.v7.widget.CardView>


</RelativeLayout>